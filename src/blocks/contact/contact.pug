mixin contact(mods)
  section.contact 
    .contact__inner 
      .contact__preview 
        img(src="../../images/seed/slide-2.jpg", alt="")
        .contact__titlebox
          h1.contact__title Контакты
          +breadcrumb('Контакты')
      .contact__map 
        script(type='text/javascript' charset='utf-8' async='' src='https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A298b118c05514fa7cf3d448d37f9574217fd1486cc8927396840209148ac2cee&width=100%25&height=720&lang=ru_RU&scroll=true')

      .contact__box 
        .contact__form 
          p.contact__text Отправьте заявку и наш менеджер перезвонит вам в ближайшее время.
          form.contact-form(action='#')
            input(type='text' placeholder='Имя')
            input(type='text' placeholder='Фамилия')
            input(type='text' placeholder='Телефонный номер')
            textarea#1(name='comment' placeholder='Комментарий')
            +btn('Отправить','btn_yellow contact__button')
        .contact__links
          p.footer__link(data-aos='fade-left')
            span Адрес:
            |   394030, г. Воронеж, Бакунский переулок, д. 11, офис 411
          a(href="tel:89202277757").footer__link(data-aos='fade-left')
            span Телефон:
            |   8-920-227-77-57
          a(href="mailto:biggrain.buh@mail.ru").footer__link(data-aos='fade-left')
            span Электронная почта:
            |   Biggrain.buh@mail.ru