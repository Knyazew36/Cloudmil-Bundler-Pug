mixin header
  header.header
    .header__inner
      .header__col
        a.header__logo(href='./index' )
          .header__logo-inner
            img(src="/logo-y.svg", alt="logo").header-logo
        a.header__logo.header__logo_2(href='./index' aria-label="Главная страница").header-logo-circle
          .header__logo-inner
        nav.navigation
          ul.navigation__list
            li.navigation__item
              a.navigation__link(href='./index') Главная
            li.navigation__item
              a.navigation__link(href='./catalog') Каталог
            li.navigation__item
              a.navigation__link(href='./about') О нас
            li.navigation__item
              a.navigation__link(href='./gallery') Галерея
            li.navigation__item
              a.navigation__link(href='./delivery')  Доставка
            li.navigation__item
              a.navigation__link(href='./contact')  Контакты
      .header__col
        +language
        .header__connection.modal-on
          p.header__phone Связаться с нами
          img.header__phone-img(src='./../../images/phone.svg' alt='phone')
        .header__burger

