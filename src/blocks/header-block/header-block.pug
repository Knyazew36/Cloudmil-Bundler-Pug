        a.header__logo.header__logo_2(href='./index').header-logo-circle
          .header__logo-inner
        nav.navigation
          ul.navigation__list
            li.navigation__item
              a.navigation__link(href='./index-en') Home
            li.navigation__item
              a.navigation__link(href='./catalog-en') Catalog
            li.navigation__item
              a.navigation__link(href='./about-en') About Us
            li.navigation__item
              a.navigation__link(href='./gallery-en') Gallery
            li.navigation__item
              a.navigation__link(href='./delivery-en')  Delivery
            li.navigation__item
              a.navigation__link(href='./contact-en')  Contacts
      .header__col
        +language-en
        .header__connection.modal-on
